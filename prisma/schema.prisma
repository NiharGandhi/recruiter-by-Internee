generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id String @id @default(uuid())
  userId String @unique
  name String @db.Text
  CompanyDescription String? @db.Text
  CompanyImageUrl String? @db.Text

  projects CreateInternship[]
}


model CreateInternship {
  id          String   @id @default(uuid())
  name        String   @db.Text
  EducationLevel String? @db.Text
  InternshipDescription String? @db.Text
  InternshipRequirement String? @db.Text
  Paid Boolean
  AmountPaid String? @db.Text
  userId      String
  user        Company     @relation(fields: [userId], references: [userId])
}