generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  userId String @unique
  name String @db.Text
  EducationLevel String? @db.Text
  InstitutionName String? @db.Text
  GraduationDate DateTime?
  email String? @unique @db.Text
  
  skills String? @db.Text

  resume String? @db.Text

  role UserRole @default(USER)
  projects Project[]
  certificates Certificate[]
  applications Application[]
}

enum UserRole {
  ADMIN
  USER
}

model Project {
  id          String   @id @default(uuid())
  name        String   @db.Text
  description String   @db.Text
  link        String?  @db.Text
  imageUrl    String? @db.Text
  userId      String
  user        User     @relation(fields: [userId], references: [userId])
}

model Certificate {
  id          String   @id @default(uuid())
  name        String   @db.Text
  description String   @db.Text
  link        String?  @db.Text
  certificateUrl    String? @db.Text
  userId      String
  user        User     @relation(fields: [userId], references: [userId])
}

model Events {
  id String @id @default(uuid())
  title String @db.Text
  dateTime DateTime
}

model OnlineReourses {
  id String @id @default(uuid())
  name String @db.Text
  desc String @db.Text
  link String @db.Text
}

model RecommendedBooks {
  id String @id @default(uuid())
  name String @db.Text
  author String @db.Text
  link String @db.Text
}

model UsefulTools {
  id String @id @default(uuid())
  name String @db.Text
  desc String @db.Text
  link String @db.Text
}

model Company {
  id String @id @default(uuid())
  userId String @unique
  name String @db.Text
  email String @db.Text
  CompanyDescription String? @db.Text
  CompanyImageUrl String? @db.Text

  projects CreateInternship[]
}

model CreateInternship {
  id          String   @id @default(uuid())
  name        String   @db.Text
  EducationLevel String? @db.Text
  InternshipDescription String? @db.Text
  InternshipRequirement String? @db.Text
  Paid Boolean
  AmountPaid String? @db.Text
  userId      String
  user        Company     @relation(fields: [userId], references: [userId])
  applications Application[]
}

model Application {
  id                   String             @id @default(uuid())
  user                 User               @relation(fields: [userId], references: [id])
  userId               String
  internship           CreateInternship   @relation(fields: [internshipId], references: [id])
  internshipId         String
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  status ApplicationStatus @default(PENDING)
}

enum ApplicationStatus {
  PENDING
  ACCEPTED
  REJECTED
}